<% title "Users(only admin)" %>
<blockquote><h3>MY SERVANTS</h3></blockquote>


<table class = 'table table-striped table-bordered' >
  <tr>
    <th>Avatars</th>
    <th>Name</th>
    <th>Email</th>
    <th>last sign in</th>
    <th>registered at</th>
    <th>country</th>
    <th>city</th>
    <th>Actions:</th>
  </tr>

  <% @servants.each do |i| %>
    <tr>
      <td><%= image_tag(avatar_url(i)) %></td>
      <td><%= i.name %></td>
      <td><%= i.email %></td>
      <td><%= i.last_sign_in_at.strftime('%b %d, %H:%M') %></td>
      <td><%= i.created_at.strftime("Registered: %d/%m/%Y at %H:%M") %></td>
      
      <% if i.country.nil? %>
        <td>unknown</td>
      <% else %>
        <td><%= i.country.name %></td>
      <% end %>

      <% if i.state.nil? %>
      	<td>unknown</td>
      <% else %>
      	<td><%= i.state.name %></td>
      <% end %>

      <td>
      	<%= link_to 'show', servant_path(i.id), :class => 'btn btn-success' %>
        <% if i.roles.first.name == "user" %> 
          <%= link_to "delete", servant_path(i.id), :method => :delete , :confirm => 'Are you sure?', :class => 'btn btn-danger' %> 
        <% end %>
      </td>
    </tr>

  <% end %>
</table>

