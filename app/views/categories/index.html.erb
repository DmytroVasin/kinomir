<% title "All categories (only admin)" %>
<div id='sixhan'>
<div id='midls'>

<blockquote><h3>Категории<h3></blockquote>

<table class="table table-striped table-bordered">
  <tr>
    <th>Categories name</th>
    <th>Actions</th>
  </tr>
  <% @categories.each do |i| %>
    <tr>
      <td><%= i.name %></td>
      <td>
        <%= link_to 'Delete categories', { :action => :destroy, :id => i.id }, :method => :delete, :confirm => 'Are you sure?' %>
      </td>
    </tr>
  <% end %>
</table>

<%= link_to "Add categories", new_category_path , :class => 'btn btn-primary btn_back' %>

</div>
</div>
