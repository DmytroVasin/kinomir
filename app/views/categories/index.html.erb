<% title "All categories (only admin)" %>
<h1>Категории</h1>

<table>
  <tr>
    <th>Categories name</th>
    <th>Actions</th>
  </tr>
  <% @categories.each do |i| %>
    <tr>
      <td><%= i.name %></td>
      <td>
        <%= link_to 'Delete categories', { :action => :destroy, :id => i.id }, :method => :delete, :confirm => 'Are you sure?' %>
      </td>
    </tr>
  <% end %>
</table>




