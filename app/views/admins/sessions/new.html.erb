<% title "log in (for admins)" %>
<div id='sixhan'>
<div id='midls'>

<legend><h3>Sign in for admin</h3></legend>

<% if current_user %>
	<div> unlogin please, before you enter in admin dirrectory </div>
<% else %>
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-horizontal' }) do |f| %>
  	<div class="control-group">
  	  	<%= f.label :email, :class => "control-label" %>
  	  <div class="controls">
  	  <div class="input-prepend">
  	    <span class="add-on"><i class="icon-envelope"></i></span>
  	  	<%= f.email_field :email, :id => "inputEmail", :placeholder => "Email", :autofocus => true %>
  	  </div>
  	  </div>
  	</div>
  	
  	<div class="control-group">
  	  	<%= f.label :password, :class => "control-label" %>
  	  <div class="controls">
  	    <div class="input-prepend">
  	      <span class="add-on"><i class="icon-lock"></i></span>
  	  	  <%= f.password_field :password, :id => "inputPassword", :placeholder => "Password" %>
  	    </div>
  	  </div>
  	</div>
  
  	<div class="control-group">
  	   <div class="controls">
  		<%= f.submit "Sign in", :class => 'btn'  %>
  	   </div>
  	</div>
  <% end %>
<% end %>

</div>
</div>