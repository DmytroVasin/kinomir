<div class='comments'>
  <strong>created by:</strong>
  	<% if comment.user.nil? %>
  		<%= comment.admin.name %>
  	<% else %>
  		<%= comment.user.name %>
  	<% end %>
  <strong>Comment:</strong>
  <%= comment.body %>
<% if ( current_user && current_user.id == comment.user_id ) or current_admin %> 
	<%= link_to 'Del', [comment.post, comment], :confirm => 'Are you sure?', :method => :delete %>
<% end %>
</div>