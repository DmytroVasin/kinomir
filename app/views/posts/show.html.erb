<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @post.text %>
</p>

<p>
  <strong>Autor:</strong>
	<% if @post.user.nil? %>
		<% if @post.admin.nil? %>
			deleted user
		<% else %>
			<%= @post.admin.name %>
		<% end %>
	<% else %>
		<%= @post.user.name %>
	<% end %>
</p>
 
<h2>Comments:</h2>
	<div id='all_comments'>
		<%= render @post.comments %>
 	</div>


<% if ( user_signed_in? or admin_signed_in? )  %> 
	<h2>Add a comment:</h2>
	<%= render "comments/form" %>
<% end %>

<%= link_to "back to all", posts_path %> 


<% if ( current_user && current_user.id == @post.user_id ) or current_admin %> 
	<%= link_to 'edit', edit_post_path %> 
<% end %>