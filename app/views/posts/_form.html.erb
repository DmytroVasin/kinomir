<div class="control-group">
  <%= f.label :title, 'Title: ', :class => "control-label" %>
  <div class="controls">
    <div class="input-prepend">
      <%= f.text_field :title, :id => "inputTitle", :placeholder => "Title of post" %>
    </div>
  </div>
</div>
<div class="control-group">
  <%= f.label :text, 'Text of post: ', :class => "control-label" %>
  <div class="controls">
    <div class="input-prepend">
      <%= f.text_area :text, :rows => 8, :id => "text_area", :placeholder => "Text of post" %>
    </div>
  </div>
</div>

<br />
<div class="controls">
<i>(leave blank if you don't want to change it)</i><br />
  <% Category.all.each do |category| %>
    <label class="checkbox inline">
      <%= check_box_tag 'post[category_ids][]', category.id %>
      <%= category.name %>
    </label>
  <% end %>
</div>

<div id='error_for_check_box'></div>

<div class="control-group">
  <div class="controls">
    <%= f.file_field :image %>
  </div>
</div>

<div class="control-group">
   <div class="controls">
    <%= f.submit "Create", :class => 'btn btn-success'  %>
   </div>
</div>

